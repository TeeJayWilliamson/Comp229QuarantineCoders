<!-- Header and Nav -->
<%- include ../partials/header.ejs %>

<%- include  ../partials/main_nav.ejs %>

<!-- EDIT Page Content -->
<div id="main-body" class="container-fluid" style="max-width: 100%; text-align: center; margin-bottom: 75px; width: 100%; margin-left: 10%;">

    <div class="row">
        <div class="offset-md-3 col-md-4">
            <h1 class="display-4" style="text-align: center;"><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Survey Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Survey Name"
                    name="name" 
                    value="<%= survey.name %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form-control"
                    id="descriptionTextField"
                    placeholder="Description"
                    name="description"
                    value="<%= survey.description %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="q1TextField">Question 1</label>
                    <input type="text" class="form-control"
                    id="q1TextField"
                    placeholder="Question 1"
                    name="question 1"
                    value="<%= survey.q1 %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="q2TextField">Question 2</label>
                    <input type="text" class="form-control"
                    id="q2TextField"
                    placeholder="Question 2"
                    name="question 2"
                    value="<%= survey.q2 %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="q3TextField">Question 3</label>
                    <input type="text" class="form-control"
                    id="q3TextField"
                    placeholder="Question 3"
                    name="question 3"
                    value="<%= survey.q3 %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="q4TextField">Question 4</label>
                    <input type="text" class="form-control"
                    id="q4TextField"
                    placeholder="Question 4"
                    name="question 4"
                    value="<%= survey.q4 %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="q5TextField">Question 5</label>
                    <input type="text" class="form-control"
                    id="q5TextField"
                    placeholder="Question 5"
                    name="question 5"
                    value="<%= survey.q5 %>" 
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Update</button>

                    <a href="/surveys-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>

    </div>
</div>





<!-- Bottom Nav and Footer -->
<%- include  ../partials/bottom_nav.ejs %>

<%- include  ../partials/footer.ejs %>